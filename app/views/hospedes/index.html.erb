<h1>Listagem de Hóspedes</h1>

<div class="mb-3">
    <%= link_to 'Criar Novo Hóspede', new_hospede_path(role: 'hospede'), class: 'btn btn-primary' %>
  <%= form_with url: hospedes_path, method: :get, local: true, class: 'd-inline-block' do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Pesquisar Hóspede', class: 'form-control d-inline-block w-auto' %>
    <%= submit_tag 'Buscar', class: 'btn btn-secondary' %>
  <% end %>
</div>

<table class="table table-hover shadow-lg">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Função</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if @hospedes.present? %>
      <% @hospedes.each do |hospede| %>
        <tr>
          <td><%= hospede.id %></td>
          <td><%= hospede.nome %></td>
          <td><%= hospede.email %></td>
          <td><%= hospede.role.capitalize %></td>
          <td>
            <%= link_to 'Visualizar', hospede_path(hospede), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_hospede_path(hospede), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Remover', hospede_path(hospede), method: :delete, data: { confirm: 'Tem certeza que deseja remover?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">Nenhum hóspede encontrado</td>
      </tr>
    <% end %>
  </tbody>
</table>

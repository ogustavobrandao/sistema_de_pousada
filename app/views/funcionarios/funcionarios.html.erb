<h1>Listagem de Funcionários</h1>

<div class="mb-3">
  <%= link_to 'Criar Novo Funcionário', new_funcionario_path(role: 'funcionario'), class: 'btn btn-primary' %>
  <%= form_with url: funcionarios_path, method: :get, local: true, class: 'd-inline-block' do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Pesquisar Funcionário', class: 'form-control d-inline-block w-auto' %>
    <%= submit_tag 'Buscar', class: 'btn btn-secondary' %>
  <% end %>
</div>

<table class="table table-hover shadow-lg">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Função</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if @funcionarios.present? %>
      <% @funcionarios.each do |funcionario| %>
        <tr>
          <td><%= funcionario.id %></td>
          <td><%= funcionario.nome %></td>
          <td><%= funcionario.email %></td>
          <td><%= funcionario.role.capitalize %></td>
          <td>
            <%= link_to 'Visualizar', funcionario_path(funcionario), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_funcionario_path(funcionario), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Remover', funcionario_path(funcionario), method: :delete, data: { confirm: 'Tem certeza que deseja remover?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">Nenhum funcionário encontrado</td>
      </tr>
    <% end %>
  </tbody>
</table>

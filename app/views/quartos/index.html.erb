<h1>Listagem de Quartos</h1>

<div class="mb-3">
  <%= link_to 'Criar Novo Quarto', new_quarto_path, class: 'btn btn-primary' %>
  <%= form_with url: quartos_path, method: :get, local: true, class: 'd-inline-block' do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Pesquisar', class: 'form-control d-inline-block w-auto' %>
    <%= submit_tag 'Buscar', class: 'btn btn-secondary' %>
  <% end %>
</div>

<table class="table table-hover shadow-lg">
  <thead>
    <tr>
      <th>ID</th>
      <th>Número</th>
      <th>Andar</th>
      <th>Preço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if @quartos.present? %>
        <% @quartos.each do |quarto| %>
        <tr>
            <td><%= quarto.id %></td>
            <td><%= quarto.numero %></td>
            <td><%= quarto.andar %></td>
            <td><%= number_to_currency(quarto.preco) %></td>
            <td>
            <%= link_to 'Visualizar', quarto_path(quarto), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_quarto_path(quarto), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Remover', quarto_path(quarto), method: :delete, data: { confirm: 'Tem certeza que deseja remover?' }, class: 'btn btn-danger btn-sm' %>
            </td>
        </tr>
        <% end %>
    <% else %>
        <tr>
        <td colspan="5">Nenhum quarto encontrado</td>
        </tr>
    <% end %>
    </tbody>
</table>

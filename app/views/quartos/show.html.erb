<div class="card mb-4">
  <div class="card-body">
    <%= render @quarto %>
  </div>
</div>

<div class="mb-4">
  <%= link_to "Edit this quarto", edit_quarto_path(@quarto), class: "btn btn-warning" %>
  <%= link_to "Back to quartos", quartos_path, class: "btn btn-secondary" %>
  
  <%= button_to "Destroy this quarto", @quarto, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
</div>

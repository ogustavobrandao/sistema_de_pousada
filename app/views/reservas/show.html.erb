<div class="card mb-4">
  <div class="card-body">
    <%= render @reserva %>
  </div>
</div>

<div class="mb-4">
  <%= link_to "Edit this reserva", edit_reserva_path(@reserva), class: "btn btn-warning" %>
  <%= link_to "Back to reservas", reservas_path, class: "btn btn-secondary" %>
  
  <%= button_to "Destroy this reserva", @reserva, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
</div>
